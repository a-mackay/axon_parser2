use std::str::FromStr;
use crate::ast::{Lit};

grammar;

pub Term: f64 = {
    <n:Num> => n,
    "(" <t:Term> ")" => t,
};

pub Lit: Lit = {
    "null" => Lit::Null,
    "true" => Lit::Bool(true),
    "false" => Lit::Bool(false),
    Num => Lit::Num(<>),
}

Num: f64 = {
    r"-?\d+(\.\d+)?" => f64::from_str(<>).unwrap(),
}